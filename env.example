# MozhiGPT Environment Configuration

# Model Configuration
MODEL_PATH=./models/tamil-gpt
TOKENIZER_VOCAB_PATH=./tamil_tokenizers/tamil_vocab.json
USE_CUSTOM_TOKENIZER=true

# Generation Parameters
MAX_NEW_TOKENS=256
TEMPERATURE=0.7
TOP_K=50
TOP_P=0.9
REPETITION_PENALTY=1.1

# Hardware Configuration
DEVICE=auto  # auto, cpu, cuda, mps
TORCH_DTYPE=float16  # float16, float32, bfloat16

# API Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Training Configuration
BATCH_SIZE=2
LEARNING_RATE=2e-4
NUM_EPOCHS=3
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.1

# Dataset Configuration
DATASET_NAME=tamiltheorist/Thamizhmalai
MAX_SAMPLES=10000  # Set to limit training data size
VALIDATION_SPLIT=0.1

# Security (Optional)
API_KEY=your_api_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database (Optional - for production)
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:pass@localhost/mozhigpt

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mozhigpt.log

# Hugging Face (if needed)
HUGGINGFACE_TOKEN=your_hf_token_here
